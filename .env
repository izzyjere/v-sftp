# SFTP server environment variables (defaults used in code shown as examples)
# Database
DB_TYPE=sqlite
DB_DSN=./data/sftp.db

# Network / host key
LISTEN_ADDR=0.0.0.0:2022
HOST_KEY_PATH=./data/host_key
BASE_FS_ROOT=./data/fs

# Logging
LOG_PATH=./logs/sftp.log
LOG_LEVEL=info

# Optional overrides (examples)
# To use PostgreSQL:
# DB_TYPE=postgres
# DB_DSN=host=localhost port=5432 user=youruser dbname=yourdb sslmode=disable
